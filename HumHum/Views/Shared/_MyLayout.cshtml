                        showProgress: true,
                        keyboardNavigation: true,
                        scrollToElement: true,
                        overlayOpacity: 0.8,
                        position: 'auto',
                        tooltipClass: 'customTooltip',
                        isActive: true,
                    })
                    .oncomplete(function () {
